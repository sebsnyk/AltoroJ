custom_rules:
  - id: 'Leaked Credit Card'
    description: 'Potential non compliance with the Payment Card Industry Data Security Standard concerning credit card data handling has been detected in the codebase.'
    severity: 'low'
    cwe:
      - 'CWE-532'
    fix_analysis: 'The description follows here'
    rule_code: 'Taint<"getCreditCardNumber",PRED:None,~".*log.*">'
    languages:
      - 'apex'
      - 'c'
      - 'cpp'
      - 'csharp'
      - 'go'
      - 'java'
      - 'javascript'
      - 'kotlin'
      - 'php'
      - 'python'
      - 'ruby'
      - 'scala'
      - 'swift'
      - 'typescript'
      - 'vb'
